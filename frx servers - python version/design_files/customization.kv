<Server_customization>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "20dp"
        md_bg_color: 0.1, 0.1, 0.12, 1

        MDLabel:
            text: " World Customization"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1

        MDTextField:
            id: seed_input
            hint_text: "Enter custom seed (leave empty for random)"
            mode: "rectangle"
            line_color_focus: 0.3, 0.6, 1, 1
            text_color_normal: 1, 1, 1, 1
            hint_text_color: 0.7, 0.7, 0.7, 1
            size_hint_y: None
            height: "48dp"

        # Folder button row
        MDBoxLayout:
            size_hint_y: None
            height: "48dp"
            spacing: "10dp"

            MDRaisedButton:
                text: "Select World Folder"
                on_release: root.pick_world_folder()
                md_bg_color: 0.2, 0.4, 0.7, 1
                elevation: 4

            MDRaisedButton:
                text: "Unselect"
                on_release: root.clear_folder_selection()
                md_bg_color: 0.5, 0.2, 0.2, 1
                elevation: 4

        MDLabel:
            id: selected_folder_label
            text: "No world folder selected"
            theme_text_color: "Custom"
            text_color: 0.7, 0.7, 0.7, 1
            halign: "center"

        MDBoxLayout:
            size_hint_y: None
            height: "48dp"
            spacing: "15dp"

            MDRaisedButton:
                text: "Back"
                on_release: root.back()
                md_bg_color: 0.25, 0.25, 0.25, 1
                text_color: 1, 1, 1, 1

            MDRaisedButton:
                text: "Next "
                on_release: root.save_customization()
                md_bg_color: 0.1, 0.6, 0.2, 1
                text_color: 1, 1, 1, 1