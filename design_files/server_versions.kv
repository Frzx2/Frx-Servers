<Server_Version>:
    name: "select_server_version"

    MDBoxLayout:
        orientation: "vertical"
        padding: "25dp"
        spacing: "25dp"
        md_bg_color: 0.08, 0.08, 0.08, 1  # darker background

        MDLabel:
            text: "Select Server Version"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1  # pure white

        MDTextField:
            id: search_version
            hint_text: "Search version..."
            mode: "rectangle"
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5}
            on_text: root.filter_versions(self.text)
            md_bg_color: 0.15, 0.15, 0.15, 1
            line_color_normal: 0.3, 0.3, 0.3, 1
            line_color_focus: 0.6, 0.6, 0.6, 1
            text_color: 1, 1, 1, 1

            # ðŸ‘‡ this makes hint text color customizable
            theme_text_color: "Custom"

            # ðŸ‘‡ force hint text color to white
            hint_text_color_normal: 1, 1, 1, 0.6   # white(ish) before focus
            hint_text_color_focus: 1, 1, 1, 1     # pure white when focused

            radius: [10,]

        ScrollView:
            id: scroll_container
            bar_width: "12dp"
            scroll_type: ['bars', 'content']
            do_scroll_x: False
            do_scroll_y: True

            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1  # very dark but distinct
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15,]

            MDList:
                id: version_list
                adaptive_height: True
                spacing: "10dp"
                padding: "10dp"

        MDLabel:
            id: selected_version_label
            text: "No version selected"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0.8, 0.8, 0.8, 1  # muted white-gray
            font_style: "Subtitle1"

        MDBoxLayout:
            orientation: "horizontal"
            spacing: "20dp"
            padding: "15dp"
            size_hint_y: None
            height: "60dp"

            MDRaisedButton:
                id: back_btn
                text: "Back"
                size_hint: 0.45, None
                height: "50dp"
                pos_hint: {"center_y": 0.5}
                elevation: 6
                md_bg_color: 0.18, 0.18, 0.18, 1  # dark gray button
                text_color: 1, 1, 1, 1
                on_release: root.back()

            MDRaisedButton:
                id: next_btn
                text: "Next "
                size_hint: 0.45, None
                height: "50dp"
                pos_hint: {"center_y": 0.5}
                elevation: 6
                md_bg_color: 0.35, 0.35, 0.35, 1  # softer neutral gray (not blue)
                text_color: 1, 1, 1, 1
                disabled: True
                on_release: root.go_to_next()
