{
  "name": "frx-servers",
  "version": "1.0.0",
  "description": "Minecraft Server Manager - Frx Servers",
  "main": "main.js",
  "author": "Frx",
  "license": "BSD-2-Clause",
  "type": "commonjs",

  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },

  "build": {
    "productName": "Frx Servers",
    "appId": "com.frx.servermanager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/dist/**",
      "!**/Testing/**",
      "!**/server/**",
      "!**/servers/**",
      "!**/*.zip",
      "!**/*.rar",
      "!**/*.exe",
      "!**/*.jar",
      "!**/world/**",
      "!**/logs/**",
      "!**/.git/**",
      "!**/.cache/**"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Frx Servers"
    },
    "extraResources": [
      { "from": "config.json", "to": "config.json" },
      { "from": "playit.exe", "to": "playit.exe" },
      { "from": "ui", "to": "ui" },
      { "from": "Icon", "to": "Icon" }
    ]
  },

  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },

  "dependencies": {
    "adm-zip": "^0.5.16",
    "chart.js": "^4.5.1",
    "pidusage": "^4.0.1",
    "systeminformation": "^5.27.11"
  }
}
